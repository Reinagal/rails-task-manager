<div class=container>
  <h1><%= @task.title %> </h1>
  <p><%= @task.details %></p>
  <p><%= @task.completed ? "<i class='far fa-check-square'></i>".html_safe : "<i class='far fa-square'></i>".html_safe %> <%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>
  <p><%= link_to 'Back to list', tasks_path %></p>
  <p><%= link_to 'Edit this task', edit_task_path, class: 'btn btn-danger'%></p>
</div>
