<div class="container">
  <h1>My tasks</h1>
  <ul style="list-style: none">
    <% @tasks.each do |task| %>
      <li>
        <%= task.completed ? "<i class='far fa-check-square'></i>".html_safe : "<i class='far fa-square'></i>".html_safe %>
        <%= link_to task.title, task_path(task.id) %>
        <%= link_to "<i class='fas fa-trash'></i>".html_safe, task_path(task.id), method: :delete,
        data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
  <br>
  <p><%= link_to 'Create a new task', new_task_path, class: 'btn btn-success' %></p>
</div>
